@using ApprenticeApplications.Models.Enums
@model ForekRequisition.Models.Education

<style>
   .form-control
    {
     border-color: #000000;

    }
</style>
<link href="~/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">


@{

    ViewData["Title"] = "Education";

}

<br />
<div class="container">
    <div class="row">
        <section>

            <ul class="nav nav-tabs" id="myTab" role="tablist">

                <li role="presentation" class="nav-item">
                    <a href="#step1" class="nav-link active" data-toggle="tab" aria-controls="step1" role="tab" title="Step 1"><i class="fa fa-school"></i> High School Details</a>
                </li>

                <li role="presentation" class="nav-item">
                    <a href="#step2" class="nav-link" data-toggle="tab" aria-controls="step2" role="tab" title="Step 2"><i class="fa fa-graduation-cap"></i> Tertiary Information</a>
                </li>
                <li role="presentation" class="nav-item">
                    <a href="#step3" class="nav-link" data-toggle="tab" aria-controls="step3" role="tab" title="Step 3"><i class="fa fa-paperclip"></i> Attachments</a>
                </li>

                <li role="presentation" class="nav-item">
                    <a href="#complete" class="nav-link" data-toggle="tab" aria-controls="complete" role="tab" title="Complete"><i class="fa fa-pen"></i> Declaration</a>

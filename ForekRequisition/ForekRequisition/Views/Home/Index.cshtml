
<link href="~/css/dashboard.css" rel="stylesheet" />

@{
    ViewBag.Title = "Dashboard";
}

<br />

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Apprentice Applicants: Analytics</h1>
    <a href="#" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">
        <i class="fa fa-download fa-sm text-white-50"></i> Generate Report
    </a>
</div>

<div class="row">
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-primary shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                            Total Electricians
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewData["Electrical"]</div>
                    </div>
                    <div class="col-auto">
                        <i class="fa fa-bolt fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-success shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                            Total Plumbers
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewData["Plumbing"]</div>
                    </div>
                    <div class="col-auto">
                        <i class="fa fa-wrench fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-info shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                            Total Welders
                        </div>
                        <div class="row no-gutters align-items-center">
                            <div class="col-auto">
                                <div class="h5 mb-0 mr-3 font-weight-bold text-gray-800">@ViewData["Welding"]</div>
                            </div>
                            
                        </div>
                    </div>
                    <div class="col-auto">
                        <i class="fa fa-cogs fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-warning shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                            Other
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewData["OtherProgr"]</div>
                    </div>
                    <div class="col-auto">
                        <i class="fa fa-circle-o fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-primary shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                           Female Applicants
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewData["Female"]</div>
                    </div>
                    <div class="col-auto">
                        <i class="fa fa-female fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-success shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                            Male Applicants
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewData["Male"]</div>
                    </div>
                    <div class="col-auto">
                        <i class="fa fa-male fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-info shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                            Mpumalanga Applicants
                        </div>
                        <div class="row no-gutters align-items-center">
                            <div class="col-auto">
                                <div class="h5 mb-0 mr-3 font-weight-bold text-gray-800">@ViewData["Mpum"]</div>
                            </div>
                          
                        </div>
                    </div>
                    <div class="col-auto">
                        <i class="fa fa-a fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-warning shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                           Other Provinces
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewData["OtherProv"]</div>
                    </div>
                    <div class="col-auto">
                        <i class="fa fa-circle-o fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<br />



<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Additional Data</h6>
    </div>
    <div class="card-body">
       Total Forek & Mega Applicants : <span class="badge badge-info">@ViewData["ForekMega"]</span> <br /><hr />
       Total Artisan Development Applicants: <span class="badge badge-primary">@ViewData["Forek"]</span>
    </div>
</div>




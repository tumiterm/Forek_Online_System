

<link href="~/css/dashboard.css" rel="stylesheet" />

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.2/css/bootstrap.css" />
<link rel="stylesheet" href="https://cdn.datatables.net/1.11.4/css/dataTables.bootstrap4.min.css" />
<script src="https://use.fontawesome.com/65d1ed3b51.js"></script>

<br />
<br />

<div class="card shadow mb-4">

  <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">
            Apprentice Results
        </h6>
  </div>

<div class="card-body">

      <div class="table table-striped table-bordered" id="dataTable" width="100%" cellspacing="0">
        <table class="table thead-dark table-sm">
  <thead>
    <tr>
      <th scope="col">Full Name</th>
      <th scope="col">Last Name</th>
      <th scope="col">ID Number</th>
      <th scope="col">Programme</th>
      <th scope="col">Recommendation</th>
      <th scope="col">Percentage(%)</th>
    
      
    </tr>
  </thead>
  <tbody>
    <tr>
      <td>@ViewData["Name"]</td>
      <td>@ViewData["LName"]</td>
      <td>@ViewData["Id"]</td>
      <td>@ViewData["Programme"]</td>
      <td>@ViewData["Reco"]</td>
      <td>@ViewData["Per"]</td>
    </tr>
  </tbody>
</table>
<br />
<div class="UserInfoDisplay">
    <div class="col-md-12">
        <div class="card border-left-dark shadow h-100 py-2">
            <div class="card-body">
                <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-danger">Urgent Notice for @ViewData["Name"] @ViewData["LName"]</h6>
                </div>
                <div class="card-body">
                    <div class="btn-group">
                   <a class="btn btn-outline-dark" asp-route-applicantId="@ViewData["UserId"]" asp-action="OnSignOffer" asp-controller="ApplicantOffer"><i class="fa fa-check"></i> Im Available</a>
                   <a class="btn btn-dark" id="btnPlumber" asp-route-applicantId="@ViewData["UserId"]" asp-action="OnSignOffer" asp-controller="ApplicantOffer"><i class="fa fa-check"></i> Im NOT Available</a>
                   <a class="btn btn-outline-dark" href="~/Auth/Logout"><i class="fa fa-close"></i> Close Page</a>
                     </div>
                </div>
                </div>
            </div>
        </div>
  </div>
</div>

  <script src="https://code.jquery.com/jquery-3.3.1.min.js" integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8=" crossorigin="anonymous"></script>
 
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>

</div>

</div>
</div>

<script>
    $(document).ready(function () {

        var status = '@ViewData["Reco"]';

        if(status.includes("Approved")){
              $('.UserInfoDisplay').show();
        }else{
            $('.UserInfoDisplay').hide();

        }

         $("#btnPlumber").on("click", function () {
             $('#welderPlumber').hide();
             $('#btnPlumber').hide();
          });
          
    });
</script>




